@model Data_Product.Models.Tbl_PhongBan
<script src="~/Chonse/chosen.jquery.js"></script>
<link href="~/Chonse/chosen.css" rel="stylesheet">
@using (Html.BeginForm("Create", "PhongBan", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog" style="padding-top:1.5%;">
        <div class="modal-content" style="max-width: none; width: 800px;">
            <div class="modal-header" style="background-color: #F9F9F9;">
                <h5 id="ModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col-md-12" style="padding-bottom: 1.5%;">
                    <label for="inputEmail5" class="form-label">Tên dài (BP/NM)</label>
                    @Html.EditorFor(model => model.TenPhongBan, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "" } })
                    @Html.ValidationMessageFor(model => model.TenPhongBan, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-12" style="padding-bottom: 1.5%;">
                    <label for="inputEmail5" class="form-label">Tên ngắn (BP/NM)</label>
                    @Html.EditorFor(model => model.TenNgan, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "" } })
                    @Html.ValidationMessageFor(model => model.TenNgan, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="text-align: end;padding: 0% 3% 3% 3%;">
                <input type="submit" style="border-radius: 10px;" value="Xác nhận" id="btnSubmit" class="btn btn-primary pull-right" />
            </div>
        </div>
    </div>
}