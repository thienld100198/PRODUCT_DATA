@model Data_Product.Models.Tbl_Xuong
<script src="~/Chonse/chosen.jquery.js"></script>
<link href="~/Chonse/chosen.css" rel="stylesheet">
@using (Html.BeginForm("Edit", "Xuong", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID_Xuong)
    <div class="modal-dialog" style="padding-top:1.5%;">
        <div class="modal-content" style="max-width: none; width: 800px;">
            <div class="modal-header" style="background-color: #F9F9F9;">
                <h5 id="ModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col-md-12" style="padding-bottom: 1.5%;">
                    <label for="inputEmail5" class="form-label">Tên xưởng làm việc</label>
                    @Html.EditorFor(model => model.TenXuong, new { htmlAttributes = new { @class = "form-control", placeholder = "", @id = "" } })
                    @Html.ValidationMessageFor(model => model.TenXuong, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-12" style="padding-bottom: 1.5%;">
                    <label for="inputEmail5" class="form-label">Tên dài (BP/NM)</label>
                    @Html.DropDownListFor(model => model.ID_PhongBan, ViewBag.PBList as SelectList, "----- Chọn BP/NM ------", new {  @style="text-align: center;", @id = "IDPhongBan", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ID_PhongBan, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="text-align: end;padding: 0% 3% 3% 3%;">
                <input type="submit" style="border-radius: 10px;" value="Xác nhận" id="btnSubmit" class="btn btn-primary pull-right" />
            </div>
        </div>
    </div>
}
<script>
    $("#IDPhongBan").chosen({
        width: "100%"
    });
</script>